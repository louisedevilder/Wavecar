<div class="container text-center">
    <div class="row">
      <% @waves.each do |wave| %>
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
          <div class="wave-card-link">
            <%= link_to wave_path(wave) do %>
              <div class="wave-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= asset_path 'surf.jpg' %>');">
                <div class="wave-card-spot">
                  <h1><%= wave.arrival_address %></h1>
                </div>
                <div class="wave-card-sport">
                  <h4><%= wave.sport.name %></h4>
                </div>
                 <div class="wave-card-departure">
                  <h4><%= wave.departure_address %></h4>
                </div>
                <div class="wave-card-datetime">
                  <p><%= wave.datetime.strftime('%A %d %B %Y') %></p>
                  <p> <%= wave.datetime.strftime('%H:%M') %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
